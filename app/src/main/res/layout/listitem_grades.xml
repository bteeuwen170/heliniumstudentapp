<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="72dp"
	android:orientation="vertical"
	android:paddingBottom="@dimen/vertical_margin"
	android:paddingLeft="@dimen/horizontal_margin"
	android:paddingRight="@dimen/horizontal_margin"
	android:paddingTop="@dimen/vertical_margin">

	<LinearLayout
		android:id="@+id/ll_containerl_lg"
		android:layout_width="wrap_content"
		android:layout_height="fill_parent"
		android:layout_alignParentStart="true"
		android:layout_alignParentLeft="true"
		android:layout_toStartOf="@+id/ll_containerr_lg"
		android:layout_toLeftOf="@id/ll_containerr_lg"
		android:layout_marginEnd="@dimen/horizontal_margin"
		android:layout_marginRight="@dimen/horizontal_margin"
		android:layout_centerVertical="true"
		android:orientation="vertical">

		<TextView
			android:id="@+id/tv_course_lg"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="start|center"
			android:singleLine="true"
			android:textSize="@dimen/primary_textsize"/>

		<TextView
			android:id="@+id/tv_grades_lg"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="start|center"
			android:fadingEdge="horizontal"
			android:ellipsize="marquee"
			android:marqueeRepeatLimit="marquee_forever"
			android:singleLine="true"
			android:textSize="@dimen/secondary_textsize"/>

	</LinearLayout>

	<LinearLayout
		android:id="@+id/ll_containerr_lg"
		android:layout_width="wrap_content"
		android:layout_height="fill_parent"
		android:layout_alignParentEnd="true"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:orientation="vertical">

		<TextView
			android:id="@+id/tv_average_lg"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="end|center"
			android:singleLine="true"
			android:textSize="@dimen/primary_textsize"/>

		<TextView
			android:id="@+id/tv_average_round_lg"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="end|center"
			android:fadingEdge="horizontal"
			android:ellipsize="marquee"
			android:marqueeRepeatLimit="marquee_forever"
			android:singleLine="true"
			android:textSize="@dimen/secondary_textsize"/>

	</LinearLayout>

</RelativeLayout>