<resources>

	<style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar"/>

	<style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
		<item name="android:textSize">20sp</item>
	</style>

	<style name="lightDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
		<item name="android:textColorPrimary">@color/text_dark</item>
		<item name="background">@color/theme_dialog_light</item>
	</style>

	<style name="darkDialog" parent="Theme.AppCompat.Dialog.Alert">
		<item name="background">@color/theme_dialog_dark</item>
	</style>

	<style name="lightSettings" parent="AppTheme.Base">
		<item name="background">@color/theme_dialog_light</item>
		<item name="android:textColor">@color/text_dark</item>
		<item name="android:textColorSecondary">@color/text_secondary_dark</item>
	</style>

	<style name="darkSettings" parent="Theme.AppCompat.Dialog.Alert">
		<item name="background">@color/theme_dialog_dark</item>
		<item name="android:textColor">@color/text_light</item>
		<item name="android:textColorSecondary">@color/text_secondary_light</item>
	</style>

	<style name="textInputLayout" parent="@android:style/TextAppearance">
		<item name="colorControlNormal">@color/text_light</item>
		<item name="colorControlActivated">@color/text_light</item>
		<item name="colorControlHighlight">@color/text_light</item>
	</style>

	<style name="AppTheme" parent="AppTheme.Base"/>
	
</resources>